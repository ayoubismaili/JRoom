<Pane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.caporal7.jroom.client.java.controllers.JoinConferenceController">
   <children>
      <HBox fx:id="hbLogin" alignment="CENTER" prefHeight="366.0" prefWidth="568.0" visible="false">
         <children>
            <VBox alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="300.0">
               <children>
                  <Label text="Connexion">
                     <font>
                        <Font name="System Bold" size="29.0" />
                     </font>
                  </Label>
                  <VBox alignment="CENTER_RIGHT" prefHeight="200.0" prefWidth="100.0" spacing="5.0">
                     <children>
                        <TextField fx:id="txtEmail" promptText="Saisir votre adresse éléctronique">
                           <font>
                              <Font size="15.0" />
                           </font>
                        </TextField>
                        <PasswordField fx:id="txtPassword" promptText="Saisir votre mot de passe">
                           <font>
                              <Font size="15.0" />
                           </font>
                        </PasswordField>
                        <Hyperlink fx:id="hlForgotPassword" alignment="BOTTOM_RIGHT" onMouseClicked="#hlForgotPasswordClick" text="Vous l'avez oublié ?" />
                        <HBox alignment="CENTER" prefHeight="43.0" prefWidth="286.0">
                           <children>
                              <CheckBox fx:id="cbDontLogout" alignment="CENTER" mnemonicParsing="false" prefHeight="21.0" prefWidth="175.0" text="Ne pas déconnecter">
                                 <font>
                                    <Font size="15.0" />
                                 </font>
                              </CheckBox>
                              <Button alignment="TOP_RIGHT" mnemonicParsing="false" onMouseClicked="#btnLoginClick" text="Connexion">
                                 <font>
                                    <Font size="15.0" />
                                 </font>
                              </Button>
                           </children>
                        </HBox>
                     </children>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </VBox>
                  <Button alignment="CENTER" contentDisplay="TOP" mnemonicParsing="false" onMouseClicked="#btnBackClick" text="Retour" />
               </children>
               <HBox.margin>
                  <Insets left="20.0" right="20.0" />
               </HBox.margin>
            </VBox>
            <Separator orientation="VERTICAL" prefHeight="150.0">
               <HBox.margin>
                  <Insets bottom="100.0" top="100.0" />
               </HBox.margin>
            </Separator>
            <VBox prefHeight="200.0" prefWidth="250.0">
               <children>
                  <Pane prefHeight="131.0" prefWidth="236.0" />
                  <Pane prefHeight="116.0" prefWidth="236.0" />
                  <Pane prefHeight="74.0" prefWidth="216.0">
                     <children>
                        <Hyperlink fx:id="hlRegister" alignment="BOTTOM_RIGHT" layoutX="59.0" layoutY="49.0" onMouseClicked="#hlRegisterClick" prefHeight="23.0" prefWidth="157.0" text="Inscrivez-vous gratuitement" />
                     </children>
                  </Pane>
               </children>
               <HBox.margin>
                  <Insets left="20.0" right="20.0" />
               </HBox.margin></VBox>
         </children>
      </HBox>
      <StackPane fx:id="spMain" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="366.0" prefWidth="568.0">
         <children>
            <GridPane prefHeight="323.0" prefWidth="524.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Label fx:id="lblVersion" text="Version" GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="BOTTOM">
                     <GridPane.margin>
                        <Insets bottom="20.0" />
                     </GridPane.margin>
                  </Label>
                  <VBox alignment="CENTER" prefHeight="122.0" prefWidth="494.0" spacing="5.0" GridPane.rowIndex="1">
                     <children>
                        <Button fx:id="btnJoin" defaultButton="true" mnemonicParsing="false" onMouseClicked="#btnJoinClick" text="Rejoindre une réunion" />
                        <Button fx:id="btnLoginInterface" mnemonicParsing="false" onMouseClicked="#btnLoginInterfaceClick" prefHeight="25.0" prefWidth="134.0" text="Connexion" />
                     </children>
                  </VBox>
                  <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
                     <image>
                        <Image url="@../images/logo.png" />
                     </image>
                  </ImageView>
               </children>
            </GridPane>
         </children>
      </StackPane>
   </children>
</Pane>
