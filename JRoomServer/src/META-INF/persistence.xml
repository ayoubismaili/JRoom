<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="JRoomServerPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>com.caporal7.jroom.common.java.jpa.Discussion</class>
    <class>com.caporal7.jroom.common.java.jpa.Attendance</class>
    <class>com.caporal7.jroom.common.java.jpa.DataStream</class>
    <class>com.caporal7.jroom.common.java.jpa.GuestAttendee</class>
    <class>com.caporal7.jroom.common.java.jpa.Avatar</class>
    <class>com.caporal7.jroom.common.java.jpa.RegisteredAttendee</class>
    <class>com.caporal7.jroom.common.java.jpa.Session</class>
    <class>com.caporal7.jroom.common.java.jpa.Message</class>
    <class>com.caporal7.jroom.common.java.jpa.Conference</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://127.0.0.1:3306/JRoomDB?useUnicode=true&amp;useJDBCCompliantTimezoneShift=true&amp;useLegacyDatetimeCode=false&amp;serverTimezone=UTC"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="root@2017"/>
    </properties>
  </persistence-unit>
</persistence>
